<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:contentPadding="3dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#4DFFFFFF"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/delete_btn_event"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    app:tint="@color/pink" />

                <ImageView
                    android:id="@+id/edit_btn_event"
                    android:layout_marginTop="15dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/edit_button"
                    android:layout_alignParentStart="true"
                    android:clickable="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_event"
                    android:gravity="center"
                    android:layout_marginStart="80dp"
                    android:textSize="20sp"
                    style="@style/TextAppearance.AppCompat.Large"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_event"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    style="@style/TextAppearance.AppCompat.Large"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/username_event"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    style="@style/TextAppearance.AppCompat.Large"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/desc_event"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    style="@style/TextAppearance.AppCompat.Large"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_gravity="center"
                android:gravity="center">


                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_plus_one_24"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:id="@+id/attenders_plus_one"
                    style="@style/ThemeOverlay.AppCompat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@color/material_dynamic_primary80"
                    android:textSize="20sp"
                    android:id="@+id/total_attenders"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_remove_24"
                    android:backgroundTint="@color/white"
                    android:layout_weight="1"
                    android:id="@+id/attenders_minus_one"
                    style="@style/ThemeOverlay.AppCompat"/>

            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="Show in maps"
                android:textColor="#ffffff"
                android:id="@+id/btn_show_maps"
                app:icon="@drawable/baseline_map_24"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>